<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table>
  <thead>
    <tr>
      <th>First title</th>
      <th>Second title</th>
      <th>First description</th>
      <th>Second description</th>
      <th>Detail description</th>
      <th>Info description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.first_title %></td>
        <td><%= course.second_title %></td>
        <td><%= course.first_description %></td>
        <td><%= course.second_description %></td>
        <td><%= course.detail_description %></td>
        <td><%= course.info_description %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

